<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="l_type_form_view" model="ir.ui.view">
            <field name="name">l.type.form</field>
            <field name="model">l.type</field>
            <field name="arch" type="xml">
                <form string="L-Type">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="l_type_tree_view" model="ir.ui.view">
            <field name="name">l.type.tree</field>
            <field name="model">l.type</field>
            <field name="arch" type="xml">
                <tree string="L-Type">

                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="l_type_action_view" model="ir.actions.act_window">
            <field name="name">L-Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">l.type</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>