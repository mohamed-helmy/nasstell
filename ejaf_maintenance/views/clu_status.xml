<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="clu_status_form_view" model="ir.ui.view">
            <field name="name">clu.status.form</field>
            <field name="model">clu.status</field>
            <field name="arch" type="xml">
                <form string="CLU Status">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="clu_status_tree_view" model="ir.ui.view">
            <field name="name">clu.status.tree</field>
            <field name="model">clu.status</field>
            <field name="arch" type="xml">
                <tree string="CLU Status">

                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="clu_status_action_view" model="ir.actions.act_window">
            <field name="name">CLU Status </field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">clu.status</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>