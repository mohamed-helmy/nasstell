<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="dvr_type_form_view" model="ir.ui.view">
            <field name="name">dvr.type.form</field>
            <field name="model">dvr.type</field>
            <field name="arch" type="xml">
                <form string="DVR Type">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="dvr_type_tree_view" model="ir.ui.view">
            <field name="name">dvr.type.tree</field>
            <field name="model">dvr.type</field>
            <field name="arch" type="xml">
                <tree string="DVR type">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="dvr_type_action_view" model="ir.actions.act_window">
            <field name="name">DVR Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">dvr.type</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>