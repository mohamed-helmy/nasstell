<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ats_model_form_view" model="ir.ui.view">
            <field name="name">ats.model.form</field>
            <field name="model">ats.model</field>
            <field name="arch" type="xml">
                <form string="ATS Model">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="ats_model_tree_view" model="ir.ui.view">
            <field name="name">ats.model.tree</field>
            <field name="model">ats.model</field>
            <field name="arch" type="xml">
                <tree string="ATS Model">

                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="ats_model_action_view" model="ir.actions.act_window">
            <field name="name">ATS Model</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ats.model</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="ats_model_action_menu" name="ATS Model"
                  parent="maintenance.menu_maintenance_configuration" action="ats_model_action_view"
                  sequence="11"/>


    </data>
</odoo>