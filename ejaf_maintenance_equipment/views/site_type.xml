<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="site_type_form_view" model="ir.ui.view">
            <field name="name">site.type.form.view</field>
            <field name="model">site.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="site_types_action" model="ir.actions.act_window">
            <field name="name">Site Types</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">site.type</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="site_types"
                  name="Site Types"
                  parent="maintenance.menu_maintenance_configuration"
                  action="site_types_action"/>



    </data>
</odoo>