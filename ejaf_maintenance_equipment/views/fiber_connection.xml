<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="fiber_connection_form_view" model="ir.ui.view">
            <field name="name">fiber.connection.form</field>
            <field name="model">fiber.connection</field>
            <field name="arch" type="xml">
                <form string="Fiber Connection">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="fiber_connection_tree_view" model="ir.ui.view">
            <field name="name">fiber.connection.tree</field>
            <field name="model">od.type</field>
            <field name="arch" type="xml">
                <tree string="Fiber Connection">

                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="fiber_connection_action_view" model="ir.actions.act_window">
            <field name="name">Fiber Connection</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">fiber.connection</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="fiber_connection_action_menu" name="Fiber Connection"
                  parent="maintenance.menu_maintenance_configuration" action="fiber_connection_action_view"
                  sequence="14"/>


    </data>
</odoo>